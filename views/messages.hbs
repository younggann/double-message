<div class ="row">
	<div class = "col-md-2"></div>
	<div class="panel panel-default col-md-8" id="panel">
		<div class="panel-heading" id="panel-heading"><center><h1>Your Conversation with {{name}}</h1></center></div>
		<div class="panel-body" id = "panel-body">
			<div class = "row">
				<div class="dropdown">
					<button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" id = "scheduled-btn">See Scheduled Messages
						<span class="caret"></span></button>
						<ul class="dropdown-menu" id="scheduled-ul">
							{{#each scheduled}}
							<li>
								<div class="msg-bubble scheduled">
									<h5>
										Sent to {{sentTo}} via text: {{createdAt}}
									</h5>
									<p>
										"{{content}}"
									</p>
								</div>
							</li>
							{{/each}}
						</ul>
					</div>
					<ul>
						{{#each messages}}
						<li >
							{{#if sentByYou}}
							<div class="msg-bubble right">
								<h5>
									Sent to {{sentTo}} via text: {{createdAt}}
								</h5>
								<p>
									"{{content}}"
								</p>
							</div>
							{{else}}
							<div class="msg-bubble">
								<h5>
									Sent via text: {{createdAt}}
								</h5>
								<p>
									"{{content}}"
								</p>
							</div>
							{{/if}}
							{{/each}}
						</ul>
					</div>
				</div>
