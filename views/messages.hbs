			</div>
		</div>
	<div class = "col-md-2"></div>
</div>

<script type="text/javascript">
$('.dropdown-toggle').dropdown();

$(function() {
	$('.date-input').hide();
	console.log($('.date-input'))

	$('#later-btn').click(function(evt){
		$('.date-input').show();
		if ($('#later-btn').attr("clicked") === "false"){
			$('#later-btn').attr("clicked","true");
			evt.preventDefault();
		};
	});
});

	
</script>
